<% include partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header"> EDIT this POST</div>

    <form class="ui form" action="/posts/<%=editedPost._id%>?_method=PUT" method="POST">
      <div class="field">
        <label>Blog Title</label>
        <input type="text"  name="post[title]" value=" <%= editedPost.title %> ">
      </div>
      <div class="field">
        <label>Image Link</label>
        <input type="text"  name="post[image]" value=" <%= editedPost.image %> ">
      </div>
      <div class="field">
        <label>Details</label>
        <textarea rows="2" name="post[body]"> <%= editedPost.body %> </textarea>
      </div>
      <button class="ui secondary button" type="submit">Edit the Post</button>

    </form>
    </div>

<% include partials/footer.ejs %>
