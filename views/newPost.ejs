    <form class="ui form" action="/posts" method="POST">
      <div class="field">
        <label>Blog Title</label>
        <input type="text" placeholder="title" name="post[title]">
      </div>
      <div class="field">
        <label>Image Link</label>
        <input type="text" placeholder="image" name="post[image]">
      </div>
      <div class="field">
        <label>Details</label>
        <textarea rows="2" name="post[body]"></textarea>
      </div>
      <button class="ui secondary button" type="submit">Submit a New Post</button>

    </form>
    </div>

